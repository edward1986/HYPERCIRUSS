@{
    Layout = "~/Views/Shared/_Layout_Anonymous.cshtml";
}

@using coreApp.Models
@model coreApp.Models.ForgotPasswordViewModel

<div class="login-block" style="width:600px">
    <div class="block block-transparent">
        <div class="head">
            <div class="user">
                <div class="info user-change">
                    <img src="~/Assets/images/ustp.png" class="img-circle img-thumbnail" style="border:none" />
                    @*<div class="user-change-button">
                            <span class="icon-off"></span>
                        </div>*@
                </div>
            </div>
        </div>
        <div class="content controls npt" style="text-align:center">

            <div class="position-relative">
                <div id="login-box" class="login-box visible widget-box no-border">
                    <div class="widget-body">
                        <div class="widget-main">
                            <h4 class="header blue lighter bigger">
                                <i class="fa fa-envelope green"></i>
                                Please check your email to reset your password
                            </h4>

                            <div class="space-6"></div>

                        </div><!-- /.widget-main -->
                        <br />
                        <div class="toolbar clearfix">
                            <div>
                                <a href="@Url.Action("Login")" class="forgot-password-link">
                                    Back to Login Page
                                </a>
                            </div>
                        </div>
                    </div><!-- /.widget-body -->
                </div><!-- /.login-box -->
            </div><!-- /.position-relative -->

        </div>
    </div>
</div>
