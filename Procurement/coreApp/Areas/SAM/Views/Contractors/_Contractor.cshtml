@model coreApp.Areas.SAM.tblContractor

@{
    bool isReadOnly = (bool)ViewBag.uiIsReadOnly;
    bool includeId = (bool)ViewBag.uiIncludeId;

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (isReadOnly)
    {
        <div class="form-group row">
             <div class="col-md">
                @Html.LabelFor(model => model.Id)
                <div class="form-control">
                    @Html.DisplayFor(model => model.Id)
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.CompanyName)
                <div class="form-control">
                    @Html.DisplayFor(model => model.CompanyName)
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Address)
                <div class="form-control">
                    @Html.DisplayMultiLineFor(model => model.Address)
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.TelephoneNo)
                <div class="form-control">
                    @Html.DisplayFor(model => model.TelephoneNo)
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Representative)
                <div class="form-control">
                    @Html.DisplayFor(model => model.Representative)
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Representative_MobileNo)
                <div class="form-control">
                    @Html.DisplayFor(model => model.Representative_MobileNo)
                </div>
            </div>
        </div>

    }
    else
    {
        @Html.HiddenFor(model => model.Id)

        @*if (includeId)
            {
                <div class="form-group row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Id)
                    </div>
                    <div class="col-md">
                        <div class="form-control dimmed">
                            @Html.DisplayFor(model => model.Id)
                        </div>
                    </div>
                </div>
            }*@

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.CompanyName)
                @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Address)
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.TelephoneNo)
                @Html.TextBoxFor(model => model.TelephoneNo, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Representative)
                @Html.TextBoxFor(model => model.Representative, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Representative_MobileNo)
                @Html.TextBoxFor(model => model.Representative_MobileNo, new { @class = "form-control" })
            </div>
        </div>

    }
}