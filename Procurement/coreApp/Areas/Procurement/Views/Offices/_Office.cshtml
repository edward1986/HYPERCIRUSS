@model Module.DB.tblOffice

@{
    bool isReadOnly = (bool)ViewBag.uiIsReadOnly;
    bool includeId = (bool)ViewBag.uiIncludeId;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (isReadOnly)
    {
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.OfficeId)
                <div class="form-control">
                    @Html.DisplayFor(model => model.OfficeId)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Office)
                <div class="form-control">
                    @Html.DisplayFor(model => model.Office)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                <label>Short Name</label>
                <div class="form-control">
                    @Html.DisplayFor(model => model.ShortName)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.TelephoneNo)
                <div class="form-control">
                    @Html.DisplayFor(model => model.TelephoneNo)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.RCC)
                <div class="form-control">
                    @Html.DisplayFor(model => model.RCC)
                </div>
            </div>
        </div>
      
    }
    else
    {
        @Html.HiddenFor(model => model.OfficeId)
        @Html.HiddenFor(model => model.CampusID)
               
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.Office)
                @Html.TextBoxFor(model => model.Office, new { @class = "form-control", maxlength = "5000" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                <label>Short Name</label>
                @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control" })
            </div>
        </div>
         <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.TelephoneNo)
                @Html.TextBoxFor(model => model.TelephoneNo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md">
                @Html.LabelFor(model => model.RCC)
                @Html.TextBoxFor(model => model.RCC, new { @class = "form-control" })
            </div>
        </div>
      
    }
}