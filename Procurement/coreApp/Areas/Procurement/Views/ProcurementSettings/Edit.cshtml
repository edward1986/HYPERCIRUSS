@model coreApp.Areas.Procurement.DAL.tblSetting
@{ 

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        
            
            @Html.HiddenFor(model => model.SettingId)
            @Html.HiddenFor(model => model.ValueType)
            @Html.HiddenFor(model => model.Setting)
            @Html.HiddenFor(model => model.Description)

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Setting)
                </div>
                <div class="col-md-9">
                    <div class="form-control dimmed">
                        @Html.DisplayFor(model => model.Setting)
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="col-md-9">
                    <div class="form-control dimmed">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SettingValue)
                </div>
                <div class="col-md-9">
                    @if (Model.ValueType == "bool")
                    {
                        <div class="checkbox">
                            <label><input id="SettingValue" name="SettingValue" type="checkbox" @(Model.SettingValue == "true" ? "checked=\"checked\"" : "") /></label>
                        </div>
                    }
                    else
                    {
                        @Html.TextBoxFor(model => model.SettingValue, new { @class = "form-control" })
                    }
                    
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    Effectivity
                </div>
                <div class="col-md-9">
                    @Html.Partial("_EffectivityField", "Effectivity")
                </div>
            </div>
}

<script>
    $('#pc-datepicker-6').datepicker({
        todayHighlight: true,
        templates: arrows
    });
</script>