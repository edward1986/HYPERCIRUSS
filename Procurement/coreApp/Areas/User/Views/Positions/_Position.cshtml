@model Module.DB.tblPosition

@{    
    bool isReadOnly = (bool)ViewBag.uiIsReadOnly;
    bool includeId = (bool)ViewBag.uiIncludeId;

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    if (isReadOnly)
    {
                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.PositionId)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.PositionId)
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Position)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.Position)
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Code)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.Code)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IsFaculty)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayBooleanFor(model => model.IsFaculty)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Confidential)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayBooleanFor(model => model.Confidential)
                        </div>
                    </div>
                </div>
    }
    else
    {
        @Html.HiddenFor(model => model.PositionId)


        if (includeId)
        {
                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.PositionId)
                        </div>
                        <div class="col-md-9">
                            <div class="form-control dimmed">
                                @Html.DisplayFor(model => model.PositionId)
                            </div>
                        </div>
                    </div>
        }

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Position)
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Code)
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.IsFaculty)
                    </div>
                    <div class="col-md-9">
                        @Html.Partial("_Helper_CheckBox", "IsFaculty", new ViewDataDictionary { { "value", Model.IsFaculty } })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Confidential)
                    </div>
                    <div class="col-md-9">
                        @Html.Partial("_Helper_CheckBox", "Confidential", new ViewDataDictionary { { "value", Model.Confidential } })
                    </div>
                </div>
    }

}