@using coreApp
@{ 
    coreApp.UserAccess access = coreApp.Cache.Get().userAccess;

    var _area = HttpContext.Current.Request.RequestContext.RouteData.DataTokens["area"];
    string area = _area == null ? "" : _area.ToString().ToLower();
}

@if (access.HasAccess("sam_settings"))
{
    <li class="dropdown @LayoutUtility.MenuSelector(true, "[NONE],SAM", "Suppliers,CategoryTypes,ItemLife")">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="fa fa-gears"></span>
            System Settings
            &nbsp;<i class="fa fa-angle-double-down"></i>
        </a>

        <ul class="dropdown-menu">
            <li class="@LayoutUtility.MenuSelector(false, "SAM", "Items")">
                <a href="@Url.Action("Index", "Items", new { area = "SAM" })">
                    Items
                </a>
            </li>
            <li class="@LayoutUtility.MenuSelector(false, "SAM", "Suppliers")">
                <a href="@Url.Action("Index", "Suppliers", new { area = "SAM" })">
                    Suppliers
                </a>
            </li>
            <li class="@LayoutUtility.MenuSelector(false, "SAM", "Warehouses")">
                <a href="@Url.Action("Index", "Warehouses", new { area = "SAM" })">
                    Warehouses
                </a>
            </li>

            @if (FixedSettings.IncludeContractors)
            {
                <li class="@LayoutUtility.MenuSelector(false, "SAM", "Contractors")">
                    <a href="@Url.Action("Index", "Contractors", new { area = "SAM" })">
                        Contractors
                    </a>
                </li>
            }
                        
            <li class="@LayoutUtility.MenuSelector(false, "SAM", "CategoryTypes")">
                <a href="@Url.Action("Index", "CategoryTypes", new { area = "SAM" })">
                    Category Types
                </a>
            </li>
            <li class="@LayoutUtility.MenuSelector(false, "SAM", "ItemLife")">
                <a href="@Url.Action("Index", "ItemLife", new { area = "SAM" })">
                    Item Life
                </a>
