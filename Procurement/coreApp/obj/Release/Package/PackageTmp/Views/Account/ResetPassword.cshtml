@{
    Layout = "~/Views/Shared/_Layout_Anonymous.cshtml";
    ViewBag.Title = "Reset password";
}

@using coreApp.Models
@model ResetPasswordViewModel



<div class="login-block" style="width:400px">
    <div class="block block-transparent">
        <div class="head">
            <div class="user">
                <div class="info user-change">
                    <img src="~/Assets/images/ustp.png" class="img-circle img-thumbnail" style="border:none" />
                    @*<div class="user-change-button">
                            <span class="icon-off"></span>
                        </div>*@
                </div>
            </div>
        </div>
        <div class="content controls npt">

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Code)

                <div class="form-row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Username" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                            <i class="fa fa-send"></i>
                            <span class="bigger-110">Reset</span>
                        </button>
                    </div>
                </div>

              
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('form').keyup(function (e) {
            if (e.keyCode == 13) {
                $(this).submit();
            }
        });
    </script>
}
