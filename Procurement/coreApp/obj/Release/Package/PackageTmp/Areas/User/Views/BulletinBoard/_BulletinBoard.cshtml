@model Module.DB.tblBulletinBoard

@{
    bool isReadOnly = (bool)ViewBag.uiIsReadOnly;
    bool includeId = (bool)ViewBag.uiIncludeId;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (isReadOnly)
    {
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Id)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Id)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Title)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Contents)
                </div>
                <div class="col-md-10">
                    <div class="form-control" style="height:200px;overflow:auto">
                        @Html.DisplayMultiLineFor(model => model.Contents)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DateOfPosting)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.DateOfPosting)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.EndOfPosting) <span>(Applicable in Kiosk)</span>
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.EndOfPosting)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Enabled)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayBooleanFor(model => model.Enabled)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.ShowInDashboard)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayBooleanFor(model => model.ShowInDashboard)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.ShowInKiosk)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayBooleanFor(model => model.ShowInKiosk)
                    </div>
                </div>
            </div>
            <hr />

            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DateCreated)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.DateCreated)
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.CreatedBy)
                </div>
                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.CreatedBy)
                    </div>
                </div>
            </div>
    }
    else
    {
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DateCreated)

        if (includeId)
        {
                <div class="form-row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Id)
                    </div>
                    <div class="col-md-10">
                        <div class="form-control dimmed">
                            @Html.DisplayFor(model => model.Id)
                        </div>
                    </div>
                </div>
        }



            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", maxlength = "200" })
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Contents)
                </div>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Contents, new { @class = "form-control tmce" })
                </div>
            </div>

            <hr />
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DateOfPosting)
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DateOfPosting, "{0:MM/dd/yyyy h:mm tt}", new { @class = "form-control datetimepicker" })
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.EndOfPosting) <span>(Applicable in Kiosk)</span>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.EndOfPosting, "{0:MM/dd/yyyy h:mm tt}", new { @class = "form-control datetimepicker" })
                </div>
            </div>
            
            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Enabled)
                </div>
                <div class="col-md-10">
                    @Html.Partial("_Helper_CheckBox", "Enabled", new ViewDataDictionary { { "value", Model.Enabled } })
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.ShowInDashboard)
                </div>
                <div class="col-md-10">
                    @Html.Partial("_Helper_CheckBox", "ShowInDashboard", new ViewDataDictionary { { "value", Model.ShowInDashboard } })
                </div>
            </div>

            <div class="form-row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.ShowInKiosk)
                </div>
                <div class="col-md-10">
                    @Html.Partial("_Helper_CheckBox", "ShowInKiosk", new ViewDataDictionary { { "value", Model.ShowInKiosk } })
                </div>
            </div>

    }
}