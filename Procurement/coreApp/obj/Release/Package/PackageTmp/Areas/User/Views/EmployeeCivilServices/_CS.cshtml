@model coreApp.DAL.tblEmployee_CivilService

@{    
    bool isReadOnly = (bool)ViewBag.uiIsReadOnly;
    bool includeId = (bool)ViewBag.uiIncludeId;

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

            if (isReadOnly)
            {
                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.CSId)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.CSId)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.CareerService)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.CareerService)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Rating)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.Rating)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.DateOfExam)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.DateOfExam)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.POE)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.POE)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.LicenseNo)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.LicenseNo)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.LicenseReleaseDate)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.LicenseReleaseDate)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.OnSeparatePage)
                    </div>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Html.DisplayBooleanFor(model => model.OnSeparatePage)
                        </div>
                    </div>
                </div>
    }
    else
    {
                @Html.HiddenFor(model => model.CSId)
                @Html.HiddenFor(model => model.EmployeeId)

                if (includeId)
                {
                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.CSId)
                        </div>
                        <div class="col-md-9">
                            <div class="form-control dimmed">
                                @Html.DisplayFor(model => model.CSId)
                            </div>
                        </div>
                    </div>
                }

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.CareerService)
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.CareerService, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Rating)
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.Rating, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.DateOfExam)
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.DateOfExam, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                    </div>
                </div>



                <fieldset style="float:left">
                    <legend>Place of Exam</legend>

                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.POE_Address)
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.POE_Address, new { @class = "form-control", maxlength = "200" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.POE_CountryId)
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.POE_CountryId, coreApp.SelectItems.getCountries(), new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.POE_PostalCode)
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.POE_PostalCode, new { @class = "form-control" })
                        </div>
                    </div>

                </fieldset>

                <fieldset style="float:left">
                    <legend>License (If applicable)</legend>

                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.LicenseNo)
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.LicenseNo, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.LicenseReleaseDate)
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.LicenseReleaseDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker" })
                        </div>
                    </div>
                </fieldset>

                <div class="form-row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.OnSeparatePage)
                    </div>
                    <div class="col-md-9">
                        @Html.Partial("_Helper_CheckBox", "OnSeparatePage", new ViewDataDictionary { { "value", Model.OnSeparatePage } })
                    </div>
                </div>
    }
}