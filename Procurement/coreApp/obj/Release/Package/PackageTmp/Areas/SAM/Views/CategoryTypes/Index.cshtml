@model List<coreApp.Areas.Procurement.DAL.tblCategory>
@{
    ViewBag.Title = "Category Types";

}

@section Breadcrumbs {
@Html.Partial("_Breadcrumbs", new List<Breadcrumb>()
    {
        new Breadcrumb { Description = "Supply/Asset Management", Link = Url.Action("Index", "Main", new { area = "SAM" }) },
        new Breadcrumb { Description = ViewBag.Title }
    })
}

@section Scripts {
    <script>
        function load(e) {

            if (e.viewType == 'view') {
        
                e.modal.find('.modal-footer .btn-delete').hide();
            }

            return e;
        }
    </script>
}

<div class="block">
    <div class="head bg-default bg-light-ltr noradius">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="content">
        <table class="display table table-bordered table-striped table-list" cellspacing="0" width="100%"
               modal-target="#modalView" modal-start="view" modal-load-callback="load"
               modal-view-url="/SAM/CategoryTypes/Details/{0}" modal-edit-url="/SAM/CategoryTypes/Edit/{0}" >
            <thead>
                <tr>
                    <th>
                        Category
                    </th>
                    <th>
                        Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (coreApp.Areas.Procurement.DAL.tblCategory item in Model)
                {
                    <tr record-id="@item.Id">
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type_Desc)
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@Html.Partial("~/Views/Shared/modals/_ModalView.cshtml", "modalView")
