@model List<Module.DB.tblCampus>

@{
    ViewBag.Title = "Campus";
    ViewBag.Subtitle = "List";

}

<script>

    function show() {
        window.open()
    }

</script>

@section Breadcrumbs {
    @Html.Partial("_Breadcrumbs", new List<Breadcrumb>() { new Breadcrumb { Description = ViewBag.Title } })
}

<div class="block">
    <div class="head bg-default bg-light-ltr noradius">
        <h2>@ViewBag.Title</h2>
        <div class="side pull-right">
            <ul class="buttons">
                <li>
                    <button class="btn btn-success btn-create" onclick="$.fn.list('modalCreate', this)">Create</button>
                </li>
            </ul>
        </div>
    </div>
    <div class="content">

        <table class="display table table-bordered table-striped table-list" cellspacing="0" width="100%"
               modal-target="#modalView" modal-start="view"
               modal-view-url="/Procurement/Campus/Details/{0}" modal-edit-url="/Procurement/Campus/Edit/{0}" modal-delete-url="/Procurement/Campus/Delete" modal-create-url="/Procurement/Campus/Create">
            <thead>
                <tr>
                    <th class="idcol">
                        Id
                    </th>
                    <th>
                        Campus
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Contact Number
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (Module.DB.tblCampus item in Model)
                {
                    <tr record-id="@item.CampusID">
                        <td>
                            @Html.DisplayFor(modelItem => item.CampusID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Campus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CampusAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNumber)
                        </td>
                      
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("~/Views/Shared/modals/_ModalView.cshtml", "modalView")
